page {
  background-color: #ffffff;
}
.navbar-bg-cover {
  position: relative;
  width: 100vw;
  height: 400rpx;
  background: #000000;
}
.navbar-bg-cover .navbar-bg-swiper {
  height: 400rpx;
}
.navbar-bg-cover .cover-item {
  width: 100%;
  height: 400rpx;
}
.navbar-bg-cover:before {
  position: absolute;
  content: "";
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: repeating-linear-gradient(#00000000, #000);
  z-index: 1;
}
.furniture-list-card {
  padding: 48rpx 36rpx;
  background: #fff;
}
.furniture-list-card .list-card-title {
  font-size: 18px;
  font-weight: 500;
}
.furniture-list-card .list-card-subtitle {
  opacity: 0.5;
  font-size: 13px;
  margin-bottom: 36rpx;
}
.furniture-list-card .list-cover {
  margin-bottom: 18rpx;
  width: 100%;
  height: 400rpx;
}
.furniture-list-card .list-card-loading {
  text-align: center;
}
.furniture-list-card .list-banner {
  padding: 48rpx 36rpx;
  border-radius: 12rpx;
  background: #cecab0;
  color: #000;
}
.furniture-list-card .list-banner .list-title {
  margin-bottom: 8rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.furniture-list-card .list-banner .list-subtitle {
  font-size: 24rpx;
  opacity: 0.5;
}
.furniture-list-card .list-card {
  margin-bottom: 24rpx;
  width: 100%;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
}
.furniture-list-card .list-card .cover {
  width: 100%;
}
.furniture-list-card .list-card .cover image {
  width: 100%;
  opacity: 0.8;
}
.furniture-list-card .list-card .name {
  padding: 0 12rpx;
  margin: 12rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  opacity: 0.8;
  color: #000;
}
.furniture-list-card .list-card .tags {
  padding: 0 12rpx;
  margin-bottom: 12rpx;
}
.furniture-list-card .list-card .tags .tag-item {
  margin-right: 12rpx;
}