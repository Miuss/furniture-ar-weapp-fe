page {
  background: #000;
}
.furniture-canvas {
  width: 100vw;
  height: 100vh;
}
.furniture-click-view {
  position: absolute;
  width: 100vw;
  height: calc(100vh - env(safe-area-inset-bottom) - 58px);
  z-index: 2;
}
.furniture-list {
  position: absolute;
  margin-bottom: 88px;
  bottom: env(safe-area-inset-bottom);
  right: 36rpx;
  background-color: #fff;
  border-radius: 8px;
  height: 160rpx;
  width: calc(100vw - 72rpx - 40rpx);
  padding: 20rpx;
  z-index: 5;
}
.furniture-list.furniture-menu-active {
  width: 64rpx;
  height: 64rpx;
  background: #000000;
  border-radius: 50em;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 1px 5px rgba(34, 34, 34, 0.1);
}
.furniture-list.furniture-menu-active .furniture-list-view {
  display: none;
}
.furniture-list.furniture-menu-active .furniture-list-icon-text {
  display: block;
  color: #ffffff;
}
.furniture-list .furniture-list-icon-text {
  display: none;
}
.furniture-list .furniture-list-view {
  display: block;
  overflow: scroll;
  white-space: nowrap;
}
.furniture-list .furniture-list-view .furniture-list-item {
  position: relative;
  display: inline-block;
  margin-right: 20rpx;
  background: #eee;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8px;
  overflow: hidden;
}
.furniture-list .furniture-list-view .furniture-list-item .furniture-tip {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50em;
  border: 2px solid #fff;
}
.furniture-list .furniture-list-view .furniture-list-item .furniture-tip .furniture-tip-selected {
  display: none;
}
.furniture-list .furniture-list-view .furniture-list-item .furniture-tip.active .furniture-tip-selected {
  position: absolute;
  left: 2px;
  top: 2px;
  display: block;
  content: "";
  width: calc(100% - 4px);
  height: calc(100% - 4px);
  background: #fff;
  border-radius: 50em;
}
.furniture-list::-webkit-scrollbar {
  display: none;
}
.tabbar {
  position: fixed;
  left: 36rpx;
  right: 36rpx;
  width: calc(100% - 72rpx);
  height: 116rpx;
  bottom: env(safe-area-inset-bottom);
  border-radius: 50em;
  overflow: hidden;
  display: flex;
  background-color: #eee;
  z-index: 2;
}
.loading {
  text-align: center;
}
.loading .loading-image {
  margin: 0 auto;
  margin-top: 25vh;
  width: 90vw;
}
.loading .loading-text {
  margin-top: 20vh;
  color: #fff;
  font-size: 32rpx;
}